
<div>
    <div class="modal-header bg-primary">
        <h4> Cadastrar Autor</h4>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <div class="col-md-12">
                <div class="col-md-12">
                    <label>Nome:</label>
                </div>
                <div class="col-md-12">
                    <input type="text" id="titulo" ng-model="createDialogBook.book.titulo" class="col-md-12" />
                </div>
                <div class="col-md-12">
                    <label>Subtitulo:</label>
                </div>
                <div class="col-md-12">
                    <input type="text" id="subtitulo" ng-model="createDialogBook.book.subtitulo" class="col-md-12" />
                </div>
                <div class="col-md-12">
                    <label>Sinopse</label>
                </div>
                <div class="col-md-12">
                    <!-- Text Area -->
                    <input type="text" id="sinopse" ng-model="createDialogBook.book.sinopse" class="col-md-12"/>
                </div>
                <div class="col-md-12">
                    <label>Ano:</label>
                </div>
                <div class="col-md-12">
                    <input type="text" id="ano" ng-model="createDialogBook.book.ano" class="col-md-12"/>
                </div>
                <div class="col-md-12">
                    <label>Volume:</label>
                </div>
                <div class="col-md-12">
                    <input type="text" id="volume" ng-model="createDialogBook.book.volume" class="col-md-12"/>
                </div>

                <div class="col-md-12">
                    <label>Editora</label>
                </div>
                <div class="col-md-5">
                    <!--Select-->
                    <input type="text" id="editora" ng-model="createDialogBook.book.publisherId" class="col-md-12" />
                </div>
                <div class="col-md-12">
                    <label>Autor:</label>
                </div>
                <div class="col-md-12">
                    <!--Select-->
                    <input type="text" id="autor" ng-model="createDialogBook.book.autorId" class="col-md-12" />
                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal-footer">
    <div class="pull-right col-md-2">
        <button type="button" class="btn bg-success pull-right" ng-click="ctrDialogBook.save();">
            <span class="fa fa-plus btn-color-white"><span class="btn-beautiful">Salvar</span></span>
        </button>
    </div>
    <div class="pull-right col-md-2">
        <button type="button" class="btn bg-warning pull-right" ng-click="ctrDialogBook.cancel();">
            <span class="btn-color-white fa fa-times"><span class="btn-beautiful">Cancelar</span></span>
        </button>
    </div>
</div>